@using Microsoft.AspNetCore.Identity
@using SpotifyPlaylisterApp.Areas.Identity.Data

@inject SignInManager<SpotifyPlaylisterUser> SignInManager
@inject UserManager<SpotifyPlaylisterUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
    <li class="nav-item">
        <a id="userplaylists" class="nav-link text-dark" asp-area="" asp-page="/MyPlaylists/Index" title="MyPlaylists">MyPlaylists</a>
    </li>

}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
